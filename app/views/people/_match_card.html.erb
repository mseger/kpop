<strong><%= person.name %></strong><br />
<%= image_tag "http://graph.facebook.com/#{person.uid}/picture?type=large" %><br />
<div class="btn-group">
  <button class="btn">
    <i class="icon icon-globe"></i>
  </button>
  <button class="btn">
    <i class="icon icon-facebook"></i>
  </button>

<% if current_user.matchees.include?(person) %>
  <button class="btn starred-match" data-id="<%= Match.find_by_user_id_and_matchee_id(current_user.id, person.id).id %>">
    <i class="icon icon-star"></i>
  </button>
<% else %>
  <button class="btn unstarred-match" data-matchee-id="<%= person.id %>">
    <i class="icon icon-star-empty"></i>
  </button>
<% end %>
</div>