<!DOCTYPE html>
<html>
<head>
  <title>Kpop</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <a class="brand" href="/">
        <i class="icon icon-globe"></i>
        Internopolis
      </a>

      <ul class="nav pull-right">
        <li><%= link_to "Roommates", people_path %></li>

      <% if current_user %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.name %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Home", "/" %></li>
            <li><%= link_to "About" %></li>
            <li><%= link_to "Log out", signout_path %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Log in", 'auth/facebook' %></li>
      <% end %>
      </ul>

    </div>
  </div>
</div>

<div class="container">

  <%= yield %>

</div>

</body>
</html>
